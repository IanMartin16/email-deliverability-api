# Database Configuration
# For local development with PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/email_deliverability

# For Render (will be auto-configured)
# DATABASE_URL=postgresql://user:password@hostname:5432/database

# RapidAPI Configuration (optional for local testing)
RAPIDAPI_PROXY_SECRET=your-rapidapi-secret-here
RAPIDAPI_USER_HEADER=X-RapidAPI-User
RAPIDAPI_SUBSCRIPTION_HEADER=X-RapidAPI-Subscription

# API Rate Limits (requests per month)
FREE_TIER_LIMIT=100
BASIC_TIER_LIMIT=5000
PRO_TIER_LIMIT=50000

# SMTP Validation Settings
SMTP_TIMEOUT=10
SMTP_CHECK_ENABLED=true

# CORS Settings
ALLOWED_ORIGINS=["*"]

# App Settings
APP_NAME=Email Deliverability Checker API
APP_VERSION=1.0.0
API_PREFIX=/api/v1
